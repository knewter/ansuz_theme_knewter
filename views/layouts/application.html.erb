  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
  <head>
    <title><%= title_helper %></title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Script-Type" content="text/javascript" />
    <meta name="description" content="Isotope11 - Custom software development for business." />
  	<meta name="keywords" content="Isotope11, software development, programming, ruby, ruby on rails, web development, birmingham, alabama, programmers, startup software" />
    <link rel="shortcut icon" href="favicon.ico" type="image/vnd.microsoft.icon" />
    <link rel="icon"          href="favicon.ico" type="image/vnd.microsoft.icon" />
    <%= manage_ansuz_stylesheets %>
    <%= manage_ansuz_javascripts %>
	  <%= theme_stylesheet_link_tag 'knewter', 'base' -%>
  </head>
  <body>
    <%= display_standard_flashes -%>
    <div id='wrapper'>
      <div id='content_wrapper'>
        <div id="main">
          <div id='header'>
            <h1>
              <span class='logo'></span>
              <span class='logotext'><%= get_setting('site_title') %></span>
            </h1>
          </div>
          <%= render :partial => "page/top_nav" -%>
          <div id='sidebar'>
            <%= render_special 'sidebar' -%>
          </div>
          <div id='content'>
            <%= render :partial => "page/breadcrumb" if (@page && (@page != @root)) -%>
            <%= @content_for_layout -%>
            <%= render :partial => "page/child_nav" if (@page && (!@page.children.empty?)) -%>
          </div>
          <div class='clear'></div>
        </div> 
        <%= render :partial => "page/footer" -%>
      </div>
    </div>
  </body>
